@model IEnumerable<MVC_Edura_ETicaret.Models.CategoryModel>

	<div class="widget">
		<h4>Kategori</h4>
		<ul class="list-unstyled link-list">
			@foreach (var item in Model)
			{
				<li><i class="fa fa-angle-right fa-fw" aria-hidden="true"></i> <a href="/Products/List/@item.Id">@item.Name <span class="pull-right">(@item.Count)</span></a></li>
			}
		</ul>
	</div>

